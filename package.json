{
    "name": "gyp-cli",
    "version": "0.1.0",
    "description": "npm CLI to create and manage .gyp files",
    "main": "./bin/index.js",
    "scripts": {
        "prepublishOnly": "pkg-ok",
        "test": "ava --verbose",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "nyc ava",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fraxken/gyp-cli.git"
    },
    "keywords": [
        "gyp",
        "node",
        "manager"
    ],
    "author": "fraxken",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/fraxken/gyp-cli/issues"
    },
    "homepage": "https://github.com/fraxken/gyp-cli#readme",
    "dependencies": {
        "cacache": "^15.0.0",
        "commander": "^4.1.1",
        "json-diff": "^0.5.4",
        "kleur": "^3.0.3",
        "make-promises-safe": "^5.1.0",
        "ora": "^4.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^4.0.0",
        "@types/node": "^13.7.1",
        "ava": "^3.3.0",
        "cross-env": "^7.0.0",
        "eslint": "^6.8.0",
        "husky": "^4.2.3",
        "jsdoc": "^3.6.3",
        "nyc": "^15.0.0",
        "pkg-ok": "^2.3.1"
    },
    "engines": {
        "node": ">=10"
    },
    "preferGlobal": true,
    "bin": {
        "gyp": "./bin/index.js"
    }
}
