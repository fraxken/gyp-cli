{
    "name": "gyp-cli",
    "version": "0.1.0",
    "description": "npm CLI to create and manage .gyp files",
    "main": "./bin/index.js",
    "scripts": {
        "prepublishOnly": "pkg-ok",
        "test": "ava --verbose",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "nyc ava",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fraxken/gyp-cli.git"
    },
    "keywords": [
        "gyp",
        "node",
        "manager"
    ],
    "author": "fraxken",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/fraxken/gyp-cli/issues"
    },
    "homepage": "https://github.com/fraxken/gyp-cli#readme",
    "dependencies": {
        "commander": "^2.20.0",
        "json-diff": "^0.5.4",
        "kleur": "^3.0.3",
        "make-promises-safe": "^5.0.0",
        "ora": "^3.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^2.0.4",
        "@types/node": "^12.0.4",
        "ava": "^1.4.1",
        "cross-env": "^5.2.0",
        "eslint": "^5.16.0",
        "husky": "^1.3.1",
        "jsdoc": "^3.5.5",
        "nyc": "^13.3.0",
        "pkg-ok": "^2.3.1"
    },
    "engines": {
        "node": ">=10"
    },
    "preferGlobal": true,
    "bin": {
        "gyp": "./bin/index.js"
    }
}
